<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="view"
                type="com.mes.example.kotlinmovieapp.view.moviedetail.MovieDetailFragment" />
        <variable
                name="movieViewModel"
                type="com.mes.example.kotlinmovieapp.viewmodels.MovieDetailViewModel"/>
    </data>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:text="Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="42sp" android:textColor="@android:color/white" android:textStyle="bold"
                    android:textAlignment="textStart" android:background="@color/detailGreen" android:padding="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="198dp" android:layout_marginTop="8dp"
                    android:weightSum="100"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintBottom_toTopOf="@+id/movie_detail_description" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="26dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/no_photo"
                        android:id="@+id/movie_detail_poster"
                        android:layout_weight="50"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                />
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:textSize="24sp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                            app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView6"
                            app:layout_constraintStart_toStartOf="@+id/textView6"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView7"
                            app:layout_constraintStart_toStartOf="@+id/textView7"
                            android:textSize="14sp"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_detail_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</layout>